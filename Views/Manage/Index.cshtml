@model EAEmployee.Net8.Models.IndexViewModel
@{
    ViewData["Title"] = "Manage Account";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.StatusMessage as string))
{
    <div class="alert alert-success">@ViewBag.StatusMessage</div>
}

<hr />
<dl class="row">
    <dt class="col-sm-3">Username</dt>
    <dd class="col-sm-9">@Model.UserName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>
</dl>

<div class="mt-3">
    @if (Model.HasPassword)
    {
        <a asp-action="ChangePassword" class="btn btn-outline-warning">Change Password</a>
    }
    else
    {
        <a asp-action="SetPassword" class="btn btn-outline-primary">Set Password</a>
    }
</div>
