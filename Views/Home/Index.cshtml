@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="ea-hero rounded-4 mb-5 position-relative overflow-hidden">
    <div class="ea-hero-bg"></div>

    <!-- Decorative blobs -->
    <div style="position:absolute;top:-60px;right:-60px;width:320px;height:320px;background:radial-gradient(circle,rgba(255,255,255,.07) 0%,transparent 70%);border-radius:50%;pointer-events:none;"></div>
    <div style="position:absolute;bottom:-80px;left:-40px;width:280px;height:280px;background:radial-gradient(circle,rgba(74,144,194,.12) 0%,transparent 70%);border-radius:50%;pointer-events:none;"></div>

    <div class="position-relative z-1 d-flex align-items-center justify-content-between flex-wrap gap-4 p-5">
        <!-- Left: text content -->
        <div style="flex:1;min-width:260px;max-width:560px">
            <span style="display:inline-block;background:rgba(255,255,255,.12);border:1px solid rgba(255,255,255,.22);color:#d4eaff;font-size:.75rem;font-weight:700;letter-spacing:.07em;padding:.3rem 1rem;border-radius:20px;margin-bottom:1.25rem;text-transform:uppercase;">
                ⚡ ASP.NET Core 8 · EF Core · Identity
            </span>
            <h1 style="font-size:clamp(2rem,4vw,3rem);font-weight:900;color:#fff;line-height:1.15;margin-bottom:1rem;">
                Employee Management<br />
                <span style="background:linear-gradient(90deg,#7ec8f7,#a8d8ff);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;">
                    Built for Scale
                </span>
            </h1>
            <p style="color:rgba(255,255,255,.7);font-size:1.05rem;line-height:1.7;margin-bottom:1.75rem;max-width:480px">
                A modern, role-aware HR system powered by ExecuteAutomation. Manage employees, track PF contributions, and control access — all in one place.
            </p>
            <div class="d-flex flex-wrap gap-3">
                <a asp-controller="Employee" asp-action="Index"
                   style="background:#fff;color:#1a3a5c;font-weight:700;font-size:.95rem;padding:.72rem 1.75rem;border-radius:10px;text-decoration:none;display:inline-flex;align-items:center;gap:.5rem;transition:transform .1s,box-shadow .15s;box-shadow:0 4px 18px rgba(0,0,0,.2);"
                   onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='none'">
                    View Employees &rarr;
                </a>
                @if (!User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Login"
                       style="background:transparent;border:2px solid rgba(255,255,255,.45);color:#fff;font-weight:600;font-size:.95rem;padding:.72rem 1.75rem;border-radius:10px;text-decoration:none;display:inline-flex;align-items:center;gap:.5rem;transition:background .15s;"
                       onmouseover="this.style.background='rgba(255,255,255,.1)'" onmouseout="this.style.background='transparent'">
                        Sign In
                    </a>
                }
            </div>

            <!-- stat pills -->
            <div class="d-flex flex-wrap gap-3 mt-4">
                <div style="background:rgba(255,255,255,.1);border:1px solid rgba(255,255,255,.15);border-radius:10px;padding:.5rem 1rem;text-align:center;">
                    <div style="font-size:1.1rem;font-weight:800;color:#fff;">370K+</div>
                    <div style="font-size:.72rem;color:rgba(255,255,255,.6);letter-spacing:.04em;">Students</div>
                </div>
                <div style="background:rgba(255,255,255,.1);border:1px solid rgba(255,255,255,.15);border-radius:10px;padding:.5rem 1rem;text-align:center;">
                    <div style="font-size:1.1rem;font-weight:800;color:#fff;">40+</div>
                    <div style="font-size:.72rem;color:rgba(255,255,255,.6);letter-spacing:.04em;">Courses</div>
                </div>
                <div style="background:rgba(255,255,255,.1);border:1px solid rgba(255,255,255,.15);border-radius:10px;padding:.5rem 1rem;text-align:center;">
                    <div style="font-size:1.1rem;font-weight:800;color:#fff;">198</div>
                    <div style="font-size:.72rem;color:rgba(255,255,255,.6);letter-spacing:.04em;">Countries</div>
                </div>
            </div>
        </div>

        <!-- Right: logo display -->
        <div style="flex-shrink:0;display:flex;align-items:center;justify-content:center;">
            <div style="position:relative;">
                <!-- outer glow ring -->
                <div style="position:absolute;inset:-18px;border-radius:30px;background:radial-gradient(circle,rgba(126,200,247,.25) 0%,transparent 70%);animation:ea-pulse 3s ease-in-out infinite;"></div>
                <!-- glass card behind logo -->
                <div style="background:rgba(255,255,255,.08);backdrop-filter:blur(10px);border:1px solid rgba(255,255,255,.18);border-radius:26px;padding:2rem;box-shadow:0 20px 60px rgba(0,0,0,.35);">
                    <img src="~/images/EA-Icon-green.png" alt="ExecuteAutomation"
                         style="width:clamp(130px,18vw,200px);height:auto;display:block;filter:drop-shadow(0 8px 24px rgba(0,0,0,.4));" />
                </div>
                <!-- ExecuteAutomation label below -->
                <div style="text-align:center;margin-top:.85rem;">
                    <span style="color:rgba(255,255,255,.55);font-size:.8rem;font-weight:600;letter-spacing:.12em;text-transform:uppercase;">ExecuteAutomation</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
@@keyframes ea-pulse {
    0%, 100% { opacity: .6; transform: scale(1); }
    50%       { opacity: 1;  transform: scale(1.05); }
}
</style>

