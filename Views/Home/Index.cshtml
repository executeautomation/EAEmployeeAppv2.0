                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#198754" viewBox="0 0 16 16">
                        <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
                    </svg>
                </div>
                <h5 class="fw-bold mb-2">PF & Contributions</h5>
                <p class="text-muted small mb-3">View employee and employer PF contributions calculated inline from salary and duration worked.</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="EmployeeDetails" asp-action="Index" class="btn btn-sm btn-outline-success">View Details</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-success">Sign in to view</a>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm ea-feature-card">
            <div class="card-body p-4">
                <div class="ea-icon-wrap bg-warning-subtle mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#ffc107" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2"/>
                    </svg>
                </div>
                <h5 class="fw-bold mb-2">Role-Based Access</h5>
                <p class="text-muted small mb-3">Administrators manage all data. Users access employee details. Secured with ASP.NET Core Identity.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-outline-warning">Create Account</a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="Index" class="btn btn-sm btn-outline-warning">My Account</a>
                }
            </div>
        </div>
    </div>
</div>

