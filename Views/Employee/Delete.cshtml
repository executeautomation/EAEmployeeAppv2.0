@model EAEmployee.Net8.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>
<h3 class="text-danger">Are you sure you want to delete this employee?</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Salary)</dt>
            <dd class="col-sm-8">@Model.Salary.ToString("N2")</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DurationWorked)</dt>
            <dd class="col-sm-8">@Model.DurationWorked</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Grade)</dt>
            <dd class="col-sm-8">@Model.Grade</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>

        <form asp-action="Delete">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
